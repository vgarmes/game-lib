generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cover {
  id          Int      @id @default(autoincrement())
  key         String   @unique
  filename    String
  contentType String?
  metadata    String?
  byteSize    Int
  checksum    String
  gameId      Int      @unique
  game        Game     @relation(fields: [gameId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  createdAt   DateTime @default(now())
}

model Game {
  id            Int        @id @default(autoincrement())
  title         String?
  inCollection  Boolean?   @default(false)
  completed     Boolean?   @default(false)
  edition       String?
  releaseDate   DateTime?  @db.Date
  completedDate DateTime?  @db.Date
  buyDate       DateTime?  @db.Date
  buyPrice      Float?
  developerId   Int?
  developer     Developer? @relation(fields: [developerId], references: [id])
  rating        Int?
  comment       String?
  platformId    Int?
  platform      Platform?  @relation(fields: [platformId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  cover         Cover?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model Platform {
  id           Int      @id @default(autoincrement())
  name         String?
  manufacturer String?
  games        Game[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Developer {
  id        Int      @id @default(autoincrement())
  name      String?
  country   String?
  games     Game[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
